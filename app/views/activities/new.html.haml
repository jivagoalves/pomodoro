#timer= '25:00'

%input#start_timer{ :type => 'button', :value => 'Start' }

#add_activity
  = form_for(@activity) do |f|
    =f.text_field :description, :value => "Create your awesome activity here..."
    =f.submit :id => 'save_activity'

%ol.activity-list
  - @activities.each do |activity|
    %li
      .activity= activity.description
