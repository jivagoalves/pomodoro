#timer-area
  %p
    %span#timer= '25:00'

#activity-area
  #add_activity
    = form_for(@activity) do |f|
      %p
        =f.text_field :description,
                      :value => "Create your awesome activity here..."
        =f.submit :id => 'save_activity'

  %ol.activity-list
    - @activities.each do |activity|
      %li
        %span.activity= activity.description
        %a.start{ href: '#' }
          Start
        %a.stop{ href: '#' }
          Stop
        |
        = link_to "Delete", activity_path(activity), method: :delete, confirm: 'Are you sure?'

#alarm-area
  %audio
